<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CloseDateRule</fullName>
    <active>true</active>
    <description>Shows an error if closed date field is empty.</description>
    <errorConditionFormula>ISBLANK(Close_Date__c ) &amp;&amp; ISPICKVAL(Status__c, &quot;Closed-Not-Approved&quot;)</errorConditionFormula>
    <errorMessage>Please provide Closed Data</errorMessage>
</ValidationRule>
